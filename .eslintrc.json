{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules" : {
        "no-console": "off",
        "no-param-reassign": ["error", { "props": false }],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "always",
              "jsx": "always",
              "ts": "always",
              "tsx": "always"
            }
         ],
         "import/no-cycle": [2, { "maxDepth": 1 }]
    }
}